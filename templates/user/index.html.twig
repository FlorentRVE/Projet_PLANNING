{% extends 'base.html.twig' %}

{% block title %}Gestion utilisateur{% endblock %}

{% block body %}
    {# ======================== Sidebar ========================== #}
    <sidebar class="bg-gray-800 fixed left-0 top-0 h-screen">
        <div class="flex flex-col items-center w-[20vw]">

            <div class="flex flex-col items-center gap-3 pt-4 font-semibold text-[1.5vh] lg:text-[2vh] mt-[20vh]">

                <ul class="list-reset flex flex-row md:flex-col pt-3 md:py-3 px-1 md:px-2 text-center md:text-left gap-6">
                    <li class="mr-3 flex-1">
                        <a href="{{ path('app_register')}}" class="block py-1 md:py-3 pl-1 align-middle text-white no-underline border-b-2 border-gray-800 hover:border-orange-400 hover:text-orange-400 text-2xl">
                            ðŸ‘¤ Nouvel utilisateur
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </sidebar>

    {# ================ NAVBAR ===================== #}
    <nav class="flex justify-between items-center px-8 py-3 bg-gray-800 fixed top-0 w-full">

        <div class="">
            <a href="{{ path('app_roulement_index') }}" class="text-4xl text-slate-50"><i class="fa-regular fa-calendar-days hover:scale-125"></i></a>
        </div>


        <form action="#" method="get" class="w-2/6">
            <label class="input input-bordered flex items-center gap-2">
                <input type="text" id="search" name="search" value="{{ searchTerm }}" class="grow" placeholder="Rechercher un utilisateur ..." />
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path fill-rule="evenodd" d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z" clip-rule="evenodd" /></svg>
            </label>
        </form>


        <a href="{{ path('app_logout') }}" class="text-2xl text-white"><i class="fa-solid fa-arrow-right-from-bracket hover:scale-125"></i></a>
    </nav>

    {# ==================== Content ======================= #}
    <content>
        <div class="ml-[20vw] mt-14 bg-gray-800 min-h-screen">
        
            <div class="flex flex-col justify-center items-center">

                <div class="pt-3 w-full mt-4">
                    <div class="bg-blue-900 p-4 shadow text-2xl text-white">
                        <h1 class="font-bold p-2">Liste d'utilisateurs</h1>
                    </div>
                </div>


                <div class="bg-gray-100 w-full py-6 px-3">

                    <div class="flex flex-col justify-center items-center w-full">
                        <div class="text-slate-950 font-bold text-xl mb-5">{{ knp_pagination_render(users) }}</div>
                    </div>

                    <table class="w-[90%] mx-auto my-0">
                        <tbody>
                        {% for user in users %}
                            <tr class="border-2 border-slate-950">
                                <td class="w-[65%] text-center font-semibold bg-gray-200">{{ user.username }}</td>

                                <td class="bg-gray-800 flex flex-col items-center p-2">

                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-slate-100 text-center px-3  hover:brightness-125 hover:text-orange-400 font-semibold">Modifier</a>
                                    <a href="{{ path('app_userPassword_edit', {'id': user.id}) }}" class="text-slate-100 text-center px-3  hover:brightness-125 hover:text-orange-400 font-semibold">Changer mot de passe</a>
                                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="text-red-700  text-center px-3  hover:brightness-125 rounded-lg font-semibold">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr class="bg-slate-50 text-2xl text-center">
                                <td colspan="3">Aucun utilisateur ne correspond Ã  votre recherche ...</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>                
            </div>
        </div>
    </content>
{% endblock %}