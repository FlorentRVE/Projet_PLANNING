        <div class="flex justify-between items-center p-2 gap-4 w-full mb-6">
            <div class="flex gap-2">
                <a href="{{ path('app_roulement_index')}}"><button class="btn bg-sky-600 hover:bg-sky-300 border-0">RESET</button></a>        
                <a href="{{ path('app_roulement_user') }}"><button class="btn bg-sky-400 hover:bg-sky-300 border-0">EXEMPLE VUE PERSO</button></a>        
            </div>

            {# <form action="#" method="get" class="w-2/6 flex gap-2">
                <input type="number" id="range" name="range" value="{{ range }}" min="1" max="14" class="w-[50px] text-center font-bold rounded-lg"/>
