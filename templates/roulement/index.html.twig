{% extends 'base.html.twig' %}

{% block title %}Roulement index{% endblock %}

{% block body %}

<div class="flex flex-col justify-center items-center p-6">

    <table class="table bg-sky-300">
        <thead>
            <tr class="text-xl">
                <th>Agent</th>
                <th>Service</th>
                <th>Date</th>
                <th>PriseDeService</th>
                <th>FinDeService</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for roulement in roulements %}
            <tr>
                <td>{{ roulement.agent.username }}</td>
                <td class="bg-purple-400">{{ roulement.service.label }}</td>
                <td>{{ roulement.date ? roulement.date|date('d-m-Y') : '' }}</td>
                <td>{{ roulement.priseDeService ? roulement.priseDeService|date('H:i:s') : '' }}</td>
                <td>{{ roulement.finDeService ? roulement.finDeService|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_roulement_edit', {'id': roulement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_roulement_new') }}" class="btn btn-primary w-1/3 mt-6">Create new</a>
</div>
{% endblock %}
