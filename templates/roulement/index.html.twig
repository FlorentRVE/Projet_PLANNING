{% extends 'base.html.twig' %}

{% block title %}Roulement index{% endblock %}

{% block body %}

<div class="flex flex-col justify-center items-center p-6">

    <div class="flex justify-center items-center p-2 gap-4">
        <a href="{{ path('app_roulement_index', {'agent': "AgentUn"}) }}"><button class="btn bg-sky-400">Agent Un</button></a>
        <a href="{{ path('app_roulement_index', {'agent': "AgentDeux"}) }}"><button class="btn bg-sky-400">Agent Deux</button></a>        
        <a href="{{ path('app_roulement_index', {'agent': " "}) }}"><button class="btn bg-sky-400">Tout</button></a>        
    </div>

    <table class="table bg-sky-300">
        <thead>
            <tr class="text-xl bg-sky-400">
                <th>Agent</th>
                <th>Service</th>
                <th>Date</th>
                <th>PriseDeService</th>
                <th>FinDeService</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for roulement in roulements %}
            <tr>
                <td>{{ roulement.agent.username }}</td>
                <td class="bg-purple-400">{{ roulement.service.label }}</td>
                <td>{{ roulement.date ? roulement.date|date('d-m-Y') : '' }}</td>
                <td class="{{ roulement.priseDeService|date('H:i:s') is same as '00:00:00' ? 'text-gray-400 bg-gray-400' : 'bg-green-400'}}">{{ roulement.priseDeService ? roulement.priseDeService|date('H:i:s') : '' }}</td>
                <td class="{{ roulement.finDeService|date('H:i:s') is same as '00:00:00' ? 'text-gray-400 bg-gray-400' : 'bg-orange-300'}}">{{ roulement.finDeService ? roulement.finDeService|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_roulement_edit', {'id': roulement.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_roulement_new') }}" class="btn btn-primary w-1/3 mt-6">Create new</a>
</div>
{% endblock %}
